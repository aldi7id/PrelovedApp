<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_back"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tv_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:text="Akun"
            android:textColor="@color/black"
            android:textSize="@dimen/header"

            app:layout_constraintBottom_toBottomOf="@+id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="@+id/btn_back" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile"
            android:layout_marginTop="21dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_akun"
            app:layout_constraintStart_toStartOf="@+id/tv_akun"
            app:layout_constraintTop_toBottomOf="@id/tv_akun" />

        <TextView
            android:id="@+id/tv_change_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah Profile"
            app:layout_constraintTop_toBottomOf="@id/iv_profile"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="@dimen/content"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_pencil"
            android:drawablePadding="20dp"
            android:layout_marginTop="40dp"
            />
        <View
            android:id="@+id/line1"
            app:layout_constraintTop_toBottomOf="@id/tv_change_profile"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keluar"
            app:layout_constraintTop_toBottomOf="@id/line1"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="@dimen/content"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_exit"
            android:drawablePadding="20dp"
            android:layout_marginTop="20dp"
            />
        <View
            android:id="@+id/line2"
            app:layout_constraintTop_toBottomOf="@id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>