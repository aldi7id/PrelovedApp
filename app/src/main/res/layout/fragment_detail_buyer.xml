<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_detail_penawar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Penawar"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_info_buyer"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_penawar">

        <ImageView
            android:id="@+id/iv_buyer_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/user_photo" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="User"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_buyer_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Tangerang Selatan"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_content_detail_penawar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produk yang ditawar"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_info_buyer"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/iv_product_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/product_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content_detail_penawar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tv_penawaran_produk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penawaran produk"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/iv_product_photo"
        app:layout_constraintStart_toEndOf="@id/iv_product_photo"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam Tangan Casio"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_penawaran_produk"
        app:layout_constraintStart_toStartOf="@id/tv_penawaran_produk"/>

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 250.000"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        app:layout_constraintStart_toStartOf="@id/tv_product_name"/>

    <TextView
        android:id="@+id/tv_price_tawar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ditawar Rp 200.000"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_product_price"
        app:layout_constraintStart_toStartOf="@id/tv_product_price"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 Apr, 14:04"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_price_tawar"
        app:layout_constraintStart_toStartOf="@id/tv_price_tawar"/>

    <Button
        android:id="@+id/btn_tolak"
        android:layout_width="160dp"
        android:layout_height="50dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="Tolak"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14sp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/iv_product_photo"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/btn_terima"
        android:layout_width="160dp"
        android:layout_height="50dp"
        style="@style/Widget.Material3.Button"
        android:text="Terima"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>