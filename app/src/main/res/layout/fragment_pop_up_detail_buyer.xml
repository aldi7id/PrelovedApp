<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/vw_shape"
        android:layout_width="100dp"
        android:layout_height="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/card_shape"
        android:backgroundTint="@color/gray"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_popup_title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Yeay kamu berhasil mendapatkan harga yang sesuai"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vw_shape"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/tv_popup_content"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Segera hubungi pembeli melalui whatsapp untuk transaksi selanjutnya."
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_popup_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_detail_tawar"
        android:layout_width="330dp"
        android:layout_height="210dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_popup_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/user_photo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="110dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tv_user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tangerang Selatan"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:id="@+id/iv_product_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/product_image"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110dp"/>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short Dress Uniqlo"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="110dp"
            android:layout_marginTop="110dp"/>

        <TextView
            android:id="@+id/tv_price_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 120.000"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="16sp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="140dp"/>

        <TextView
            android:id="@+id/tv_price_tawar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ditawar Rp 100.000"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="110dp"
            android:layout_marginTop="170dp"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_hubungi"
        android:layout_width="330dp"
        android:layout_height="50dp"
        app:icon="@drawable/ic_whatsapp"
        android:text="Hubungi via Whatsapp"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:paddingStart="60dp"
        android:paddingEnd="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>